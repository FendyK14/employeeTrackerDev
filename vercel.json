{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ]
}